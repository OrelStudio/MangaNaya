# ----------------------
# Stage 1: Builder
# ----------------------
  FROM oven/bun:1 AS builder
  WORKDIR /app
  
  COPY package.json bun.lockb* ./
  COPY packages ./packages
  RUN bun install
  
  COPY turbo.json .
  COPY apps/Scraper/package.json ./apps/Scraper/package.json
  WORKDIR /app/apps/Scraper
  RUN bun install
  COPY apps/Scraper /app/apps/Scraper/
  RUN bunx tsup index.ts --out-dir=dist --minify --dts --format=esm --clean
  
  # ----------------------
  # Stage 2: Runtime
  # ----------------------
  FROM oven/bun:1 AS runtime
  RUN addgroup --system --gid 1001 nodejs && \
      adduser --system --uid 1001 nextjs
  
  USER nextjs
  WORKDIR /app
  ENV NODE_ENV=production
  # ENV NODE_ENV=development
  
  # 1) Copy the built files
  COPY --from=builder /app/apps/Scraper/dist ./dist
  
  # 2) Copy node_modules
  COPY --from=builder /app/node_modules ./node_modules
  
  # 3) IMPORTANT: Copy the local packages so symlinks aren't broken
  COPY --from=builder /app/packages ./packages
  
  EXPOSE 3000
  CMD ["bun", "run", "./dist/index.js"]
  